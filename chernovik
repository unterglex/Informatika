a=[[1,2,3,4,5,],[1,3,4,5,6,7,7]]
for i in range(5):
    maxi=a[i][0]
    ind=0
    for j in range(7):
        if maxi<a[i][j]:
            maxi=a[i][j]
            ind=j
    if ind==0:
        a[i][1]=int(a[i][1])*2
    if ind==6:
        a[i][5]=int(a[i][5])*2
    if ind !=0 and ind !=6:
        f=min(a[i][ind-1]); a[i][ind+1]
        if a[i][ind-1]<a[i][ind+1]:
            a[i][ind-1]=int(a[i][ind-1])*2
        else: a[i][ind+1]= itn(a[i][ind+1])*2
